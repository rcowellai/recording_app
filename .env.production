# Production Environment Configuration
# For live production deployment

# Firebase Configuration (Production Project)
VITE_FIREBASE_API_KEY=production_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=love-retold-backend.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=love-retold-backend
VITE_FIREBASE_STORAGE_BUCKET=love-retold-backend.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=production_sender_id_here
VITE_FIREBASE_APP_ID=production_app_id_here

# Application URLs (Production)
VITE_RECORDING_APP_URL=https://love-retold-backend.web.app
VITE_LOVE_RETOLD_APP_URL=https://loveretoldpoc.web.app

# External API Keys (Production Keys - Set via CI/CD)
VITE_OPENAI_API_KEY=${OPENAI_API_KEY}
VITE_SENDGRID_API_KEY=${SENDGRID_API_KEY}

# Environment Configuration
VITE_ENVIRONMENT=production
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error
VITE_USE_EMULATORS=false

# Performance & Monitoring (Fully enabled)
VITE_ANALYTICS_ENABLED=true
VITE_ERROR_TRACKING_ENABLED=true
VITE_PERFORMANCE_MONITORING=true

# Feature Flags (Production features only)
VITE_ENABLE_VIDEO_RECORDING=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_DEBUG_PANEL=false

# Upload Configuration (Optimized for production)
VITE_MAX_FILE_SIZE_MB=100
VITE_SUPPORTED_AUDIO_FORMATS=webm,wav,m4a
VITE_SUPPORTED_VIDEO_FORMATS=webm,mp4

# Security Configuration (Strict production settings)
VITE_SESSION_TIMEOUT_DAYS=7
VITE_RATE_LIMIT_REQUESTS_PER_MINUTE=60
VITE_ENABLE_CORS_CREDENTIALS=true

# Production Security Headers
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true
VITE_ENABLE_XSS_PROTECTION=true

# CDN and Performance
VITE_ENABLE_CDN=true
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_CACHING=true