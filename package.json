{
  "name": "love-retold-recording-integration",
  "version": "1.0.0",
  "description": "Love Retold Recording Integration - Firebase Backend Infrastructure",
  "main": "index.js",
  "scripts": {
    "dev": "firebase emulators:start --import=./emulator-data --export-on-exit",
    "build": "npm run build:functions && npm run build:rules",
    "build:functions": "cd functions && npm run build",
    "build:rules": "echo 'Security rules built'",
    "deploy": "firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:rules": "firebase deploy --only firestore:rules,storage:rules",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:staging": "firebase use staging && firebase deploy",
    "deploy:production": "firebase use production && firebase deploy",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "cd functions && npm run test",
    "test:integration": "firebase emulators:exec 'npm run test:integration:run'",
    "test:integration:run": "jest --testPathPattern=integration",
    "test:security": "firebase emulators:exec 'npm run test:security:run'",
    "test:security:run": "jest --testPathPattern=security",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "validate": "npm run lint && npm run test",
    "setup": "npm install && cd functions && npm install",
    "clean": "rm -rf functions/lib && rm -rf dist",
    "logs": "firebase functions:log",
    "shell": "firebase functions:shell",
    "emulate": "firebase emulators:start --import=./emulator-data",
    "backup": "firebase firestore:export gs://love-retold-backend-backups/$(date +%Y-%m-%d)",
    "restore": "firebase firestore:import",
    "db:seed": "node scripts/seed-database.js",
    "db:clear": "node scripts/clear-database.js",
    "performance:test": "npm run build && firebase emulators:exec 'npm run performance:run'",
    "performance:run": "node scripts/performance-test.js",
    "security:audit": "npm audit && cd functions && npm audit",
    "pre-commit": "npm run lint && npm run test:unit"
  },
  "keywords": [
    "firebase",
    "love-retold",
    "recording",
    "memory",
    "storytelling",
    "transcription"
  ],
  "author": "Love Retold Team",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.1",
    "@playwright/test": "^1.54.2",
    "@types/jest": "^29.5.5",
    "eslint": "^8.49.0",
    "eslint-config-google": "^0.14.0",
    "firebase-tools": "^12.6.0",
    "jest": "^29.7.0",
    "playwright": "^1.54.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "firebase": "^10.4.0",
    "firebase-admin": "^11.11.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/love-retold-recording-integration.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/love-retold-recording-integration/issues"
  },
  "homepage": "https://github.com/your-org/love-retold-recording-integration#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  }
}
