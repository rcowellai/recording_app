# Firebase Configuration for Love Retold Recording App
# Copy this file to .env and fill in your Firebase project details

VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id

# Environment Settings
VITE_ENVIRONMENT=development
VITE_USE_FIREBASE_EMULATORS=false

# Recording App Settings
VITE_MAX_RECORDING_TIME_MINUTES=10
VITE_SUPPORTED_AUDIO_TYPES=audio/webm,audio/mp4,audio/wav
VITE_SUPPORTED_VIDEO_TYPES=video/webm,video/mp4