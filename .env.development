# Development Environment Configuration
# For local development with Firebase emulators

# Firebase Emulator Configuration
VITE_FIREBASE_API_KEY=demo-key
VITE_FIREBASE_AUTH_DOMAIN=localhost
VITE_FIREBASE_PROJECT_ID=love-retold-backend-dev
VITE_FIREBASE_STORAGE_BUCKET=love-retold-backend-dev.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=000000000000
VITE_FIREBASE_APP_ID=1:000000000000:web:development

# Application URLs (Local Development)
VITE_RECORDING_APP_URL=http://localhost:5173
VITE_LOVE_RETOLD_APP_URL=http://localhost:3000

# External API Keys (Development/Testing Keys)
VITE_OPENAI_API_KEY=sk-test-key-for-development
VITE_SENDGRID_API_KEY=SG.test-key-for-development

# Environment Configuration
VITE_ENVIRONMENT=development
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug
VITE_USE_EMULATORS=true

# Emulator Ports (must match firebase.json)
VITE_FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
VITE_FIREBASE_FIRESTORE_EMULATOR_HOST=localhost:8080
VITE_FIREBASE_FUNCTIONS_EMULATOR_HOST=localhost:5001
VITE_FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# Performance & Monitoring (Disabled in development)
VITE_ANALYTICS_ENABLED=false
VITE_ERROR_TRACKING_ENABLED=true
VITE_PERFORMANCE_MONITORING=false

# Feature Flags (All enabled for testing)
VITE_ENABLE_VIDEO_RECORDING=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=false

# Development Upload Configuration
VITE_MAX_FILE_SIZE_MB=50
VITE_SUPPORTED_AUDIO_FORMATS=webm,wav,m4a
VITE_SUPPORTED_VIDEO_FORMATS=webm,mp4

# Security Configuration (Relaxed for development)
VITE_SESSION_TIMEOUT_DAYS=30
VITE_RATE_LIMIT_REQUESTS_PER_MINUTE=1000
VITE_ENABLE_CORS_CREDENTIALS=true